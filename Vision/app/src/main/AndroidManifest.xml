<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="aios.core.vision" >

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".StartVisionService"
            android:label="@string/title_activity_start_vision_service" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".VisionIntentService"
            android:exported="false" >
            <intent-filter>
                <action android:name="aios.core.vision" />
            </intent-filter>
        </service>
        <service
            android:name=".camera.CameraService"
            android:enabled="true"
            android:exported="true" >
        </service>

        <activity
            android:name=".activity.CameraPreviewActivity"
            android:label="@string/title_activity_camera_preview" >
        </activity>

        <service
            android:name=".facedetection.FaceDetectionCVService"
            android:enabled="true"
            android:exported="true" >
        </service>
        <service
            android:name=".facetracking.FaceTrackingService"
            android:enabled="true"
            android:exported="true" >
        </service>
        <service
            android:name=".facerecognition.FaceRecognitionService"
            android:enabled="true"
            android:exported="true" >
        </service>
        <service
            android:name=".facelearning.FaceLearningService"
            android:enabled="true"
            android:exported="true" >
        </service>
        <service
            android:name=".facerecognition.FaceManager"
            android:enabled="true"
            android:exported="true" >
        </service>
    </application>

</manifest>
